<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/councilmainholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudiesPresentationActivity" >

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/conftextholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/conftextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/previousnextbuttonholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:gravity="center" >

            <Button
                android:id="@+id/upcomingconferencebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/inactivetabbackleft"
                android:text="Upcoming"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/previousconferencebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/inactivetabbackright"
                android:text="Previous"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

		 <LinearLayout
		     android:id="@+id/appconferencebuttonholder"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:orientation="horizontal" >

		     <LinearLayout
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="20dp"
		         android:layout_marginLeft="20dp"
		         android:layout_marginTop="20dp"
		         android:orientation="vertical" >

		         <Button
		             android:id="@+id/conference_team"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_margin="2dp"
		             android:background="@drawable/conference_button"
		             android:text="" />

		         <Button
		             android:id="@+id/agendabutton"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_margin="2dp"
		             android:background="@drawable/agenda_button"
		             android:text="" />

		         <Button
		             android:id="@+id/speakersbutton"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_margin="2dp"
		             android:background="@drawable/speakers_button"
		             android:text="" />
		     </LinearLayout>

		     <LinearLayout
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginBottom="20dp"
		         android:layout_marginRight="20dp"
		         android:layout_marginTop="20dp"
		         android:orientation="vertical" >

		         <Button
		             android:id="@+id/venuebutton"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_margin="2dp"
		             android:background="@drawable/venue_button"
		             android:text="" />

		         <Button
		             android:id="@+id/floorplan"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_margin="2dp"
		             android:background="@drawable/floor_plan_button"
		             android:text="" />

		         <Button
		             android:id="@+id/sponsors"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_margin="2dp"
		             android:background="@drawable/sponsors_button"
		             android:text="" />
		     </LinearLayout>

		 </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/conferenceregisterbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/morebackground"
                android:text="Register"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
